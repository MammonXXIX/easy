generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum PostStatus {
  DRAFT
  PRIVATE
  PUBLISH
}

model Post {
  id String @id @default(uuid())
  title String
  description String
  content String
  view Int
  imageUrl String
  status PostStatus @default(DRAFT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user User @relation(fields: [userId], references: [id])
}

model User {
  id String @id
  email String
  firstName String
  imageUrl String

  posts Post[]
}

